<h3>注文履歴詳細</h3>

<table>
     <tr>
       <td>購入者</td>
       <td><%= @order.name %></td>
     </tr>
     <tr>
       <td>注文日</td>
       <td><%= @order.created_at.strftime("%Y/%M/%D") %></td>
     </tr>
     <tr>
       <td>配送先</td>
       <td><%= @order.customer.address %></td>
     </tr>
     <tr>
       <td>支払方法</td>
       <td><%= @order.payment_method %></td>
     </tr>

     <tr>
       <td>注文ステータス</td>
       <%= form_with model: @order, url: admin_order_path(@order) %>
       <td><%= f.select :status, *[0..4] %></td>
       <td><%= f.submit "更新" %></td>
       <% end %>
     </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <% @order.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.order_details.price*1.08 %></td>
      <td><%= order.order_details.amount %></td>
      <td><%= order.order_details.price*order.order_details.amount %></td>
  <% end %>
  <%= form_with model: @order, url: admin_order_path(@order) %>
    <td><%= f.select :product_status, *[0..3] %></td>
    <td><%= f.submit "更新" %></td>
  <% end %>
    </tr>
  </tbody>
</table>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= @order.total_payment %></td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <td>請求金額</td>
    <td><%= @order.total_payment + @order.shipping_cost %></td>
  </tr>
</table>