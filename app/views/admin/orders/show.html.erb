<h3>注文履歴詳細</h3>

<table>
     <tr>
       <td>購入者</td>
       <td><%= @order.name %></td>
     </tr>
     <tr>
       <td>注文日</td>
       <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
     </tr>
     <tr>
       <td>配送先</td>
       <td><%= @order.customer.address %></td>
     </tr>
     <tr>
       <td>支払方法</td>
       <td><%= @order.payment_method_i18n %></td>
     </tr>

     <tr>
       <td>注文ステータス</td>
       <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
         <td><%= f.select :status, options_from_collection_for_select(Order.statuses, :id, :status) %></td>
         <td><%= f.submit "更新" %></td>
       <% end %>
     </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_details| %>
      <tr>
        <td><%= order_details.item.name %></td>
        <td><%= (order_details.price*1.08).ceil.to_s(:delimited) %></td>
        <td><%= order_details.amount %></td>
        <td><%= (order_details.price*order_details.amount).to_s(:delimited) %></td>
    <% end %>
      <%= form_with model: @order_details, url: admin_order_path(@order) do |f| %>
        <td><%= f.select :product_status, options_from_collection_for_select(OrderDetail.product_statuses, :id, :product_status) %></td>
        <td><%= f.submit "更新" %></td>
      <% end %>
      </tr>
  </tbody>
</table>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= @order.total_payment.to_s(:delimited) %></td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_cost.to_s(:delimited) %></td>
  </tr>
  <tr>
    <td>請求金額</td>
    <td><%= (@order.total_payment + @order.shipping_cost).to_s(:delimited) %></td>
  </tr>
</table>