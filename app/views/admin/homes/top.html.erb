<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <td>購入日時</td>
      <td>購入者</td>
      <td>注文個数</td>
      <td>注文ステータス</td>
    </tr>
  </thead>

 <tbody>
   <% @orders.each do |order| %>
     <tr>
       <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
       <td><%= order.name %></td>
       <td><%= order.order_details.sum(:amount) %></td>
       <td>
         <%= link_to admin_order_path(order) do %>
         <%= order.status_i18n %>
         <% end %>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>

<%= paginate @orders %>