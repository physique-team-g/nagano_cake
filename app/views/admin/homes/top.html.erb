<div class="container">
 <div class="row p-3">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h4><span style = "background-color: #EEE; padding: 0 20px;">注文履歴一覧</span></h4>
    <table class = table>
      <thead>
        <tr>
          <th style = "background: #EEE;">購入日時</th>
          <th style = "background: #EEE;">購入者</th>
          <th style = "background: #EEE;">注文個数</th>
          <th style = "background: #EEE;">注文ステータス</th>
        </tr>
      </thead>

     <tbody>
       <% @orders.each do |order| %>
         <tr>
           <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
           <td><%= (order.customer.last_name+order.customer.first_name) %></td>
           <td><%= order.order_details.sum(:amount) %></td>
           <td>
             <%= link_to admin_order_path(order) do %>
             <%= order.status_i18n %>
             <% end %>
           </td>
         </tr>
       <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>

<div class="row p-3">
 <div class="col-3 mx-auto">
  <%= paginate @orders %>
 </div>
</div>
