<h3>商品詳細</3>

<%= image_tag @item.item_image, size: '100x100' %>
  <table>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>

    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>

    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>

    <tr>
      <td>税込み価格<br>(税抜き価格)</td>
      <td><%= @total_price.ceil %>(<%= @item.price %>)円</td>
    </tr>

    <tr>
      <td>販売ステータス</td>
      <td>
         <% if @item.is_active %>
           販売中
         <% else %>
          販売停止中
          <% end %>
      </td>
    </tr>
  </table>
  <%= link_to "編集する",  edit_admin_item_path(@item) %>

