<h2>商品新規登録</h2>
    <%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>

      <div class="form-group">
        <%= f.label :image,"商品画像" %>
        <%= f.file_field :item_image, class: "form-control-file item_image", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label :name,"商品名" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction,"商品説明" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label :genre_id,"ジャンル" %>
        <%= f.select :genre_id, [["ケーキ", 1], ["焼き菓子", 2], ["プリン", 3], ["キャンディ", 4]] %>
      </div>

      <div class="form-group">
        <%= f.label :price,"税抜価格" %>
        <%= f.text_field :price, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction,"販売ステータス" %>

        <%= f.radio_button :is_active, "transfer" %>
        <%= f.label :is_active, "販売中" %>

        <%= f.radio_button :is_active, "transfer" %>
        <%= f.label :is_active, "販売停止中" %>
      </div>


      <div class="form-group">
        <%= f.submit "更新", class: 'btn btn-secondary' %>
      </div>
    <% end %>

