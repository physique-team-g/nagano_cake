<div class= "container", style= "margin-top: 50px; margin-bottom: 50px;">
  <div class= "row ml-5">
    <div class="bg-info text-white">
      <h2>商品編集</h2>
    </div>
  </div>
  <div class="row">
    <div class= "mx-auto">
      <%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>

        <div class="form-group">
          <%= f.label :image,"商品画像" %>
          <%= f.file_field :item_image, class: "form-control-file item_image", accept: 'image/*', size: "60" %>
        </div>

        <div class="form-group">
          <%= f.label :name,"商品名" %>
          <%= f.text_field :name, class: "form-control name", size: "60" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction,"商品説明" %>
          <%= f.text_area :introduction, class: "form-control introduction", size: "60x10" %>
        </div>

        <div class="form-group">
          <%= f.label :genre_id,"ジャンル" %>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
        </div>

        <div class="form-group">
          <%= f.label :price,"税抜価格" %>
          <%= f.text_field :price, class: "form-control price", size: "60" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction,"販売ステータス" %>

          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>

          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>

