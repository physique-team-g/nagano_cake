<!--変数名やフォームの名前全体的に間違ってます。修正必要です。-->
<h2>商品新規登録</h2>
    <%= form_with model:@item, url: admin_items_path, local:true do |f| %>

      <div class="form-group">
        <%= f.label :image,"商品画像" %>
        <%= f.file_field :item_image, class: "form-control-file item_image", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.label :name,"商品名" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction,"商品説明" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label :genre_id,"ジャンル" %>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>

      <div class="form-group">
        <%= f.label :price,"税抜価格" %>
        <%= f.text_field :price, class: "form-control introduction" %>
      </div>

      <div class="form-group">
        <%= f.label :is_active,"販売ステータス" %>

        <%= f.radio_button :is_active, Item.is_active.key(true) %>
        <%= f.label :is_active, "販売中" %>

        <%= f.radio_button :is_active, Item.is_active.key(false) %>
        <%= f.label :is_active, "販売停止中" %>
      </div>


      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-secondary' %>
      </div>
    <% end %>
