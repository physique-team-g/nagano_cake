<div class= "container">
  <div class= "row", style= "margin:50px 100px;">

    <div class= "col-6 bg-light">
    <h3>商品一覧</h3>
    </div>

    <div class= "col-6">
      <div class="text-right">
      <%= link_to new_admin_item_path do %>
       <h4><i class="fas fa-plus"></i>商品を追加</h4>
      <% end %>
      </div>
    </div>
  </div>

  <div class= "row">
    <table class= "table">
      <thead>
        <tr class= "table-secondary">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
             <% if item.is_active %>
             <div class= "text-success">
               販売中
              </div>
             <% else %>
             <div class= "text-danger">
               販売停止中
             </div>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class= "row p-3">
    <div class="col-3 mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>