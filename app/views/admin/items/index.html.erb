<h3>商品一覧</3>
<h3><%= link_to "＋（新規登録）", new_admin_item_path %></h3>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
         <% if item.is_active %>
           販売中
         <% else %>
          販売停止中
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

