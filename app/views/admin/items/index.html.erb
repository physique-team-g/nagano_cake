<div class= "container",  style= "margin:100px 0px 100px;">
  <div class= "row">
    <div class= "col-6 bg-info text-white">
    <h3>商品一覧</3>
  </div>
  <div class= "col-6">
    <div class="text-right">
    <%= link_to new_admin_item_path do %>
     <h4><i class="fas fa-plus"></i>商品を追加</h4>
    <% end %>
    </div>
  </div>
  </div>
  <div class= "row">
    <table class= "table">
      <thead>
        <tr class= "table-secondary">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
             <% if item.is_active %>
               販売中
             <% else %>
              販売停止中
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @items %>