<div class= "container">
  <div class= "row p-3 bg-light">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <div class= "row p-3">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name,placeholder: "ジャンル名" %>
        <%= f.submit"新規登録", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class= "row p-3">
    <table class= "table">
      <thead>
        <tr class="table-secondary">
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
       <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-success btn-block' %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>
