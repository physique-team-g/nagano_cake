<h3>会員一覧</3>

<table border="1" style="border-collapse: collapse">
  <thead>
    <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <tr>
  <% @customers.each do |customer| %>
    <td>
      <%= customer.id %>
    </td>
    <td>
      <%= link_to admin_customer_path(customer) do %>
        <%= customer.last_name %><%= customer.first_name %>
      <% end %>
    </td>
    <td>
      <%= customer.email %>
    </td>
    <td>
      <% if customer.is_deleted == false %>
        <p>有効</p>
      <% else %>
        <p>退会</p>
      <% end %>
    </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @customers %>