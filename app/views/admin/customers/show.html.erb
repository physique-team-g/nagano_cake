<h3>会員詳細</3>

<!--会員ID-->
<%= @customer.id %><br>

<!--氏名-->
<%= @customer.last_name %>
<%= @customer.first_name %><br>

<!--フリガナ-->
<%= @customer.last_name_kana %>
<%= @customer.first_name_kana %><br>

<!--郵便番号-->
<%= @customer.post_code %><br>

<!--住所-->
<%= @customer.address %><br>

<!--電話番号-->
<%= @customer.phone_number %><br>

<!--メールアドレス-->
<%= @customer.email %><br>

<!--会員ステータス-->
<%= @customer.is_deleted %><br>

