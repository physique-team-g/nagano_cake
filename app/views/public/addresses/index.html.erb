<h3>配送先登録/一覧</h3>
<%= form_with model: @address, url: addresses_path do |f| %>
  <div>
   <%= f.label "郵便番号(ハイフンなし)" %>
   <%= f.text_field :post_code  %>
  </div>
  <div>
   <%= f.label "住所" %>
   <%= f.text_field :address %>
  </div>
  <div>
   <%= f.label "宛名" %>
   <%= f.text_field :name %>
  </div>
  <div>
   <%= f.submit '新規登録' %>
  </div>
<% end %>

<table border="1" style="border-collapse: collapse">
<tr>
   <th>郵便番号</th>
   <th>住所</th>
   <th>>宛名</th>
   <th colspan="3"></th>
</tr>
<% @addresses.each do |address| %>
<tr>
   <td>
      <%= address.post_code %>
   </td>
   <td>
      <%= address.address %>
   </td>
   <td>
      <%= address.name %>
   </td>
   <td>
      編集する
      削除する
   </td>
</tr>
<% end %>
</table>