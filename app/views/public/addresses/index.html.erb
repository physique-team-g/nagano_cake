<h3>配送先登録/一覧</h3>

<%= form_with model: @address do |f| %>
<table>
<tr>
   <td>
     <p>郵便番号(ハイフンなし)</p>
   </td>
   <td>
      <%= f.text_field :post_code  %>
   </td>
</tr>
<tr>
   <td>
     <p>住所</p>
   </td>
   <td>
      <%= f.text_field :address %>
   </td>
</tr>
<tr>
   <td>
     <p>宛名</p>
   </td>
   <td>
      <%= f.text_field :name %>
   </td>
   <td></td>
   <td>
      <%= f.submit '新規登録' %>
   </td>
</tr>
</table>
<% end %>

<table border="1" style="border-collapse: collapse">
<tr>
   <th>郵便番号</th>
   <th>住所</th>
   <th>>宛名</th>
   <th colspan="3"></th>
</tr>
<% @addresses.each do |address| %>
<tr>
   <td>
      <%= address.post_code %>
   </td>
   <td>
      <%= address.address %>
   </td>
   <td>
      <%= address.name %>
   </td>
   <td>
      <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-sm btn-success" %>
      <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
   </td>
</tr>
<% end %>
</table>