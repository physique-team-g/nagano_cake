<h4>注文情報入力</h4>

<%= form_with model: @order, url: order_check_path, local:true do |f| %>

<!--支払方法選択のラジオボタン-->
  <div class="form-group">
    <%= f.label :payment_method, "支払方法" %>
      <br>
    <%= f.radio_button :payment_method, 0, checked: "checked" %>
    <%= f.label :payment_method, "クレジットカード" %>
      <br>
    <%= f.radio_button :payment_method, 1 %>
    <%= f.label :payment_method, "銀行振込" %>
  </div>

<!--お届け先のラジオボタン-->
  <div class="form-group">
    <%= f.label :address, "お届け先" %>
      <br>
    <%= f.radio_button :address_number, 0, checked: "checked" %>
    <%= f.label :address, "ご自身の住所" %>
    <%= current_customer.post_code %>
    <%= current_customer.address %>
    <%= current_customer.last_name %>
    <%= current_customer.first_name %>
      <br>
    <%= f.radio_button :address_number, 1 %>
    <%= f.label :address, "登録済住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_all ) %>
      <br>
    <%= f.radio_button :address_number, 2 %>
    <%= f.label :address, "新しいお届け先" %>
    <table>
      <tr>
         <td>郵便番号(ハイフンなし)</td>
         <td><%= f.text_field :post_code, placeholder: "000000" %></td>
      </tr>
      <tr>
         <td>住所</td>
         <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      </tr>
      <tr>
         <td>宛名</td>
         <td><%= f.text_field :name, placeholder: "令和道子" %></td>
      </tr>
      </table>
  </div>

<%= f.submit '確認画面へ進む', class:"btn btn-success" %>

<% end %>