<h4>注文履歴一覧</h4>

  <table border="1" style="border-collapse: collapse">
    <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <!--注文日-->
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        
        <!--配送先（郵便番号、住所、宛名）-->
        <td>〒<%= order.post_code %><br>
            <%= order.address %><br>
            <%= order.name %></td>
            
        <!--注文商品-->
        <td></td>
        
        <!--支払い金額-->
        <td><%= order.total_payment %></td>
        
        <!--ステータス-->
        <td><%= order.status %></td>
        
        <!--注文詳細ボタン-->
        <td><%= link_to "表示する(リンク先要編集)", orders_path, class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
